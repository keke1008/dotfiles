(defalias 
  mous (layer-while-held mouse-control)

  mmlt (switch
    ((input real w)) (movemouse-left 10 30) break
    ((input real e)) (movemouse-left 10 1) break
    () (movemouse-left 10 5) break
  )
  mmdw (switch
    ((input real w)) (movemouse-down 10 30) break
    ((input real e)) (movemouse-down 10 1) break
    () (movemouse-down 10 5) break
  )
  mmup (switch
    ((input real w)) (movemouse-up 10 30) break
    ((input real e)) (movemouse-up 10 1) break
    () (movemouse-up 10 5) break
  )
  mmrt (switch
    ((input real w)) (movemouse-right 10 30) break
    ((input real e)) (movemouse-right 10 1) break
    () (movemouse-right 10 5) break
  )
)
(deflayer mouse-control
