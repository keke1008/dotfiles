#!/bin/sh -eu

export_and_mkdir() {
	if [ $# -ne 2 ]; then
		abort "export_and_mkdir requires exactly 2 arguments" >&2
	fi

	export "$1"="$2"
	mkdir -p "$2"
}

bootstrap() {
	if ! DOTPATH="$(cd "$(dirname "$0")" && pwd)"; then
		echo "Failed to resolve DOTPATH" >&2
		exit 1
	fi
	export DOTPATH
	echo "${DOTPATH}" >"${HOME}/.dotpath"

	. "${DOTPATH}/scripts/lib/log.sh"

	export_and_mkdir XDG_CONFIG_HOME "${HOME}/.config"
	export_and_mkdir XDG_DATA_HOME "${HOME}/.local/share"

	export_and_mkdir DOTFILES_CONFIG_HOME "${DOTPATH}/configs"
	export_and_mkdir DOTFILES_SCRIPT_HOME "${DOTPATH}/scripts"
	export_and_mkdir DOTFILES_DATA_HOME "${XDG_DATA_HOME}/dotfiles"
	export_and_mkdir DOTFILES_LOCAL_HOME "${XDG_CONFIG_HOME}/dotfiles/local"
	export_and_mkdir DOTFILES_ORIGINAL_HOME "${XDG_CONFIG_HOME}/dotfiles/original"
}

execute_script() {
	if [ $# -eq 0 ]; then
		echo "Usage: $0 [profile] <subcommand> [args...]"
		abort "Subcommand is required."
	fi

	case "$1" in
	local)
		_DOTFILES_PROFILE="local"
		shift
		;;
	global)
		_DOTFILES_PROFILE="global"
		shift
		;;
	*)
		_DOTFILES_PROFILE="global"
		;;
	esac
	log trace "profile: ${_DOTFILES_PROFILE}"

	if [ $# -eq 0 ]; then
		echo "Usage: $0 [profile] <subcommand> [args...]"
		abort "Subcommand is required."
	fi

	local subcommand="$1"
	log trace "subcommand: ${subcommand}"
	shift

	local _DOTFILES_STASH_ROOT=""
	if [ "${_DOTFILES_PROFILE}" = "global" ]; then
		_DOTFILES_STASH_ROOT="${DOTFILES_ORIGINAL_HOME}"
	fi

	local subcommand_source="${DOTPATH}/scripts/${subcommand}.sh"
	if ! [ -x "${subcommand_source}" ]; then
		abort "Unknown subcommand: ${subcommand}"
	fi

	# shellcheck disable=SC2086
	env _DOTFILES_PROFILE="${_DOTFILES_PROFILE}" \
		_DOTFILES_STASH_ROOT="${_DOTFILES_STASH_ROOT}" \
		"${subcommand_source}" "$@"
}

main() {
	bootstrap
	execute_script "$@"
}

main "$@"
